<%
var categoriesList = list_categories({ show_count: true}),
tagsList = list_tags({ show_count: false }),
archivesList = list_archives({ show_count: false });
%>
<footer id="footer">
    <div class="inner clearfix">
        <div class="links">
            <h3>友情链接</h3>
            <ul>
                <% Object.keys(theme.links).forEach(function(key) { %>
                <li><a href="<%=theme.links[key]%>" target="_blank"><%=key%></a></li>
                <% }); %>
            </ul>
        </div>
        <div class="article-category">
            <h3>文章分类</h3>
            <% if (categoriesList) { %>
            <%-categoriesList%>
            <% } else { %>
            <p>None.</p>
            <% } %>
        </div>
        <div class="article-tags">
            <h3>标签云</h3>
            <% if (tagsList) { %>
            <%-tagsList%>
            <% } else { %>
            <p>None.</p>
            <% } %>
        </div>
    </div>
</footer>